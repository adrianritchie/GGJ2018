<?xml version='1.0' encoding='utf-8'?>
<widget id="gg.kodo.ggj2018mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Call the Bomb Squad!</name>
    <description>
        App required for playing Call the Bomb Squad!
    </description>
    <author email="bombsquad@kodo.ggg" href="http://bombsquad.kodo.gg">
        The Bomb Squad @ Kodo
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
</widget>
